div#page-thread(data-role='page')
  div(data-role='header')
    -if (just_posted)
      a(href='javascript:history.go(-2);', data-icon='arrow-l') Back
    -else
      a(href='/posts', data-rel='back', data-icon='arrow-l') Back
    h1 Thread view
    a.ui-btn-right(href='javascript:document.location.reload()', data-role='button', data-icon='refresh', data-iconpos='notext') Refresh

  div(data-role='content')
    h3.post-text!= orig.postText.replace(/\\/g, '')
    p
      span.prettydate.post-date(title='#{orig.postCreated.replace(' ','T')}')
      | ...
      #{orig.postTotalAgrees} agrees / #{orig.postTotalDisagrees} disagrees / #{orig.postTotalNewsworthies} newsworthies

    div(data-role='controlgroup', data-type='horizontal', data-mini='true')
      a(href='#', data-role='button', data-icon='check') Agree
      a(href='#', data-role='button', data-icon='minus') Disagree
      a(href='#', data-role='button', data-icon='plus') Newsworthy

    - if (replies.length > 0)
      ul#replies(data-role='listview', data-inset='true')
        - each post in replies
          include post

    include write
